{
  "name": "laundro",
  "version": "1.0.0",
  "description": "A Laundry Management System",
  "main": "src/server.js",
  "scripts": {
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=unit --verbose --coverage",
    "test:integration": "jest --testPathPattern=integration --verbose --coverage",
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/**/*.{js,json}",
    "format:check": "prettier --check src/**/*.{js,json}",
    "code:check": "npm run lint && npm run format:check && npm run test"
  },
  "author": "Peter Mba Akasi",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.4.1",
    "jest": "^30.2.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.21.0",
    "morgan": "^1.10.1",
    "supertest": "^7.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.15.26",
    "winston": "^3.19.0",
    "xss-clean": "^0.1.4",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.3.2"
  }
}
